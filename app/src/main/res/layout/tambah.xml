<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_linear">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:text="Tambah"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#F7C959"
            android:layout_marginTop="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="342dp"
        android:layout_height="164dp"
        android:layout_marginTop="103dp"
        android:background="@drawable/background_card"
        android:elevation="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:gravity="center_vertical"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_medium"
                />
            <LinearLayout
                android:id="@+id/lo_pemasukan"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:layout_marginLeft="28dp"
                android:orientation="vertical"
                android:background="@drawable/border"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/ci_pemasukan"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/money_icon_grey"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/ti_pemasukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemasukan"
                    android:textSize="8dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lo_pengeluaran"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:background="@drawable/border"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible">
                <ImageView
                    android:id="@+id/ci_pengeluaran"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/money_icon_grey"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/ti_pengeluaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengeluaran"
                    android:textSize="8dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    />
                <LinearLayout
                    android:layout_width="62dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="28dp"
                    android:orientation="vertical"
                    android:background="@drawable/border"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/money_icon_grey"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemasukan"
                        android:textSize="8dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="342dp"
                android:layout_height="1dp"
                android:background="#F7C959"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@color/main"
                    android:fontFamily="@font/poppins_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/poppins_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/poppins_medium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/input_tanggal"
                    android:layout_width="149dp"
                    android:layout_height="22dp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/border"
                    android:inputType="date"
                    />
                <EditText
                    android:id="@+id/input_nominal"
                    android:layout_width="149dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/border"
                    android:inputType="number"
                    />
                <EditText
                    android:id="@+id/input_keterangan"
                    android:layout_width="149dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/border"
                    android:inputType="text"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button"
        android:text="Simpan"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/card_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>