<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_linear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.new_transaction.NewTransactionFragment">

    <include
        android:id="@+id/header_new_transaction"
        layout="@layout/base_header"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F7C959"
        app:layout_constraintTop_toBottomOf="@id/header_new_transaction"/>

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_card"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:gravity="center_vertical"
                android:textColor="@color/main"
                android:fontFamily="@font/poppins_medium"/>
           
            <ToggleButton
                android:id="@+id/tb_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:checked="true"
                android:textOn=""
                android:textOff=""
                android:text=""
                android:background="@drawable/income_background"/>

            <ToggleButton
                android:id="@+id/tb_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textOn=""
                android:textOff=""
                android:text=""
                android:background="@drawable/expense_background"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F7C959"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_weight="7">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@color/main"
                    android:fontFamily="@font/poppins_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/poppins_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/main"
                    android:fontFamily="@font/poppins_medium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_weight="3">
                <EditText
                    android:id="@+id/input_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/border"
                    android:inputType="text"
                    />
                <EditText
                    android:id="@+id/input_nominal"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/border"
                    android:inputType="number"
                    />
                <EditText
                    android:id="@+id/input_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/border"
                    android:inputType="text"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="16dp"
        android:text="Simpan"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:backgroundTint="#F7C959"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>